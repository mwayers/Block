{
  "manifest_version": 3,
  "name": "Block Google AI Overview",
  "version": "1.0",
  "description": "Automatically hides Google's AI Overview on search results.",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": [
    "https://www.google.com/search*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.google.com/search*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}